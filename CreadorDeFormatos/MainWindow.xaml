<Window x:Class="CreadorDeFormatos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:CreadorDeFormatos.Languages"
        mc:Ignorable="d"
        Title="{x:Static lang:Resources.AppTitle}" Height="450" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Label Content="{x:Static lang:Resources.AppTitle}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="16" Grid.ColumnSpan="3" />
        <Label Content="{x:Static lang:Resources.LabelExcel}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="{x:Static lang:Resources.LabelFormatDocx}" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="{x:Static lang:Resources.LabelOutputFolder}" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="lblExcelFilePath" Content="{Binding ExcelFilePath}" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" />
        <Label x:Name="lblDateFormat" Content="{x:Static lang:Resources.AppTitle}" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,20,0,0"/>
        <Label x:Name="lblFormatFilePath" Content="{Binding FormatFilePath}" Grid.Column="3" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" />
        <Label x:Name="lblOutputFilePath" Content="{Binding OutputFolderPath}" Grid.Column="3" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" />

        <Button Content="{x:Static lang:Resources.ButtonSelectExcel}" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Click="SelectExcelFile_Click"/>

        <ComboBox x:Name="dateFormatSelector" SelectedIndex="0" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" >
            <ComboBoxItem Content="dd/MM/yyyy"/>
            <ComboBoxItem Content="MM/dd/yyyy"/>
            <ComboBoxItem Content="yyyy-MM-dd"/>
        </ComboBox>

        <Button Content="{x:Static lang:Resources.ButtonSelectFormat}" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" Click="SelectFormatFile_Click"/>
        <Button Content="{x:Static lang:Resources.ButtonSelectFolder}" Grid.Column="2" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Click="SelectOutputFolder_Click"/>

        <Button Content="{x:Static lang:Resources.ButtonGenerateFormats}" Grid.Column="2" Grid.Row="6" HorizontalAlignment="Left" VerticalAlignment="Center" Click="GenerateFormats_Click"/>

        <!-- Progress bar just below the button -->
        <ProgressBar x:Name="progressBar" Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="3" Height="20" Minimum="0" Maximum="100" Visibility="Collapsed"/>

    </Grid>
</Window>
