<Window x:Class="CreadorDeFormatos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lang="clr-namespace:CreadorDeFormatos.Languages"
        mc:Ignorable="d"
        Title="{x:Static lang:Resources.AppTitle}" Height="450" Width="1000">

    <Window.Resources>
        <!-- Consistent button style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header bar -->
        <Label Content="{x:Static lang:Resources.AppTitle}"
               Grid.Row="0"
               Grid.ColumnSpan="6"
               Background="SteelBlue"
               Foreground="White"
               FontSize="20"
               FontWeight="Bold"
               Padding="10"
               HorizontalAlignment="Stretch"/>

        <!-- Excel file selection -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <Label Content="{x:Static lang:Resources.LabelExcel}" VerticalAlignment="Center"/>
            <Button Content="{x:Static lang:Resources.ButtonSelectExcel}" Click="SelectExcelFile_Click"/>
            <Label x:Name="lblExcelFilePath" Content="{Binding ExcelFilePath}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Date format selection -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
            <Label Content="{x:Static lang:Resources.LabelDateFormat}" VerticalAlignment="Center"/>
            <ComboBox x:Name="dateFormatSelector"
                      Width="150"
                      SelectedValue="{Binding DateFormat, Mode=TwoWay}"
                      Margin="10,0,0,0">
                <ComboBoxItem Content="dd/MM/yyyy"/>
                <ComboBoxItem Content="MM/dd/yyyy"/>
                <ComboBoxItem Content="yyyy-MM-dd"/>
            </ComboBox>
        </StackPanel>

        <!-- Format file selection -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5">
            <Label Content="{x:Static lang:Resources.LabelFormatDocx}" VerticalAlignment="Center"/>
            <Button Content="{x:Static lang:Resources.ButtonSelectFormat}" Click="SelectFormatFile_Click"/>
            <Label x:Name="lblFormatFilePath" Content="{Binding FormatFilePath}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Output folder selection -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="5">
            <Label Content="{x:Static lang:Resources.LabelOutputFolder}" VerticalAlignment="Center"/>
            <Button Content="{x:Static lang:Resources.ButtonSelectFolder}" Click="SelectOutputFolder_Click"/>
            <Label x:Name="lblOutputFilePath" Content="{Binding OutputFolderPath}" Margin="10,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Generate button and progress bar -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="5">
            <Button Content="{x:Static lang:Resources.ButtonGenerateFormats}" Click="GenerateFormats_Click"/>
            <ProgressBar x:Name="progressBar"
                         Width="200"
                         Height="20"
                         Minimum="0"
                         Maximum="100"
                         Visibility="Collapsed"
                         Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
